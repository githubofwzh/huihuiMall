/*修改select下拉框样式*/

select {
	width: 100%;
	/*很关键：将默认的select选择框样式清除*/
	-moz-appearance: none;
	-webkit-appearance: none;
	/*在选择框的最右侧中间显示小箭头图片*/
	background: url(../../images/common/xiala.png) no-repeat scroll right center transparent;
	height: 24px;
	/*为下拉小箭头留出一点位置，避免被文字覆盖*/
	padding-right: 28px;
	border-radius: 4px;
	outline: none;
	background-color: #FFF;
	color: #0e385e;
	font-size: 14px;
	padding-left: 5px;
	color: #7d7d7d;
}

select::-ms-expand {
	display: none;
}

select:disabled{
	background-color: #cccccc;
}

.form-select{
	width: 100%;
	/*很关键：将默认的select选择框样式清除*/
	-moz-appearance: none;
	-webkit-appearance: none;
	/*在选择框的最右侧中间显示小箭头图片*/
	background: url(../../images/common/xiala2.png) no-repeat scroll right center transparent;
	height: 34px;
	/*为下拉小箭头留出一点位置，避免被文字覆盖*/
	padding-right: 28px;
	border: 1px solid  #ccc;
	border-radius: 4px;
	outline: none;
	background-color: #FFF;
	font-size: 14px;
	color: #999;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
	padding-left:18px;
}

.form-select:focus {
	border-color: #66afe9;
	outline: 0;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6)
}
