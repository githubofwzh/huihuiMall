/*生活缴费主页样式*/
.living-payment-panel{
    padding: 77px 0 30px 0;
    background-color: #FFFFFF;
    overflow-x: hidden;
    overflow-y: scroll;
}

.living-payment-title{
    padding: 0px;
}

.living-payment-title span{
    color: #383838;
    font-size: 19px;
    font-family: "微软雅黑";
    font-weight: bold;
    padding-left: 30px;
}

.select-panel{
    padding: 20px 20px 10px 20px;
}

select{
    height:40px;
    width: 100%;
    border-radius: 4px;
    outline: none;
}

.item-panel{
    text-align: center;
    padding: 0px 20px;
}

.item-panel span{
    font-size:34px;
}

.item{
    padding: 50px;
    border:1px solid #e7e7e7;
    margin: 20px;
}

.item:first-child{
    margin-left: 0px;
}

#choosePanelGroup{
    height: 457px;
    overflow: hidden;
    overflow-y: auto;
}

.btn-default:hover,
.btn-default:focus,
.btn-default:active:focus{
    border-color: #ccc;
}

.modal-title,.modal-body{
    font-size: 28px;
}

/*查询缴费单页面*/
.paymentList-panel{
    padding: 120px 0 30px 0;
    background-color: #FFFFFF;
    overflow-x: hidden;
    overflow-y: scroll;
}

.paymentList-panel-title{
    padding: 0px;
}

.paymentList-panel-title span{
    color: #383838;
    font-size: 34px;
    font-family: "微软雅黑";
    font-weight: normal;
    padding-left: 30px;
}

.userCode-panel{
    padding:0px;
}

.userCode-title{
    padding:20px 0px;
}

.userCode-title span{
    color: #383838;
    font-size: 34px;
    font-family: "微软雅黑";
    font-weight: normal;
    padding-left: 30px;
}

.userCode-input{
    padding:0px 15px;
}

.userCode-input input{
    border:none;
    border-bottom:1px solid #ccc;
    width:500px;
    height:50px;
    font-size: 30px;
    outline: none;
}

.search-panel{
    padding: 20px;
}

.searchBtn{
    padding: 10px 40px;
    background-color: #c57030;
    border: 0px;
    border-radius: 4px;
    font-size: 24px;
    color: #ffffff;
    text-align: center;
}

.feeBtn{
    padding: 10px 40px;
    background-color: #c57030;
    border: 0px;
    border-radius: 4px;
    font-size: 24px;
    color: #ffffff;
    text-align: center;
}

#table{
    font-size: 24px;
}

#table th{
    font-weight: normal;
    padding: 15px 20px;
    background-color: #CCCCCC;
    color:#000000;
}

.payOrder-panel{
    padding:20px 0px;
    display: none;
}