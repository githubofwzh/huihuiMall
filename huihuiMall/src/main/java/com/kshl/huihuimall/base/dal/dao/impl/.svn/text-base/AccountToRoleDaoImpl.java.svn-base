package com.kshl.huihuimall.base.dal.dao.impl;

import com.github.pagehelper.PageHelper;
import com.kshl.huihuimall.base.dal.dao.AccountToRoleDao;
import com.kshl.huihuimall.base.dal.entity.KsAccountToRole;
import com.kshl.huihuimall.base.dal.entity.KsAccountToRoleExample;
import com.kshl.huihuimall.base.dal.mapper.KsAccountToRoleMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import java.util.List;

/**
 * Created by Administrator on 2017/6/2.
 */
@Repository
public class AccountToRoleDaoImpl implements AccountToRoleDao {

    @Autowired
    private KsAccountToRoleMapper accountToRoleMapper;

    @Override
    public void addAccountToRole(KsAccountToRole accountToRole) {
        accountToRoleMapper.insert(accountToRole);
    }

    @Override
    public List<KsAccountToRole> getAllAccountRole(Integer pageNum, Integer pageSize, String roleName) {
        if (pageNum != null && pageSize != null){
            PageHelper.startPage(pageNum,pageSize);
        }
        KsAccountToRoleExample ksAccountToRoleExample  = new KsAccountToRoleExample();
        if (roleName != null && !roleName.equals("")){
            ksAccountToRoleExample.createCriteria().andRoleNameLike("%" + roleName + "%");
        }
        List<KsAccountToRole> ksAccountToRoles = accountToRoleMapper.selectByExample(ksAccountToRoleExample);
        return ksAccountToRoles;
    }

    @Override
    public int addAccountRole(KsAccountToRole ksAccountToRole) {
        return accountToRoleMapper.insert(ksAccountToRole);
    }

    @Override
    public int deleteAccountRole(Integer id) {
        return accountToRoleMapper.deleteByPrimaryKey(id);
    }

    @Override
    public int updateAccountRole(KsAccountToRole ksAccountToRole) {
        return accountToRoleMapper.updateByPrimaryKeySelective(ksAccountToRole);
    }
}
